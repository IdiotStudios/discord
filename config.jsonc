// Global bot config (JSONC: supports comments)
{
  // Start command configuration
  "start": {
    "services": {
      // Example Minecraft service
      "mc": {
        "url": "http://localhost:8080/start",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": { "action": "start" },
        "args_field": "args",
        "timeout_secs": 10
      }
    }
  }
}
